gcloud container clusters create calendar-cluster \
  --zone=us-central1-a \
  --num-nodes=1 \
  --enable-autorepair \
  --enable-autoupgrade

gcloud container node-pools create secondary-pool \
  --cluster=calendar-cluster \
  --zone=us-central1-a \
  --machine-type=e2-small \
  --disk-size=30GB \
  --enable-autoscaling \
  --min-nodes=1 \
  --max-nodes=3
